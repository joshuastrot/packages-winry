# Maintainer: Joshua Strot <joshua@winrylinux.org>

pkgname=winry-wallpapers
pkgver=$(date +%Y%m%d)
pkgrel=1
pkgdesc="Wallpapers for Winry Linux"
arch=('any')
url="https://github.com/winry-linux/winry-wallpapers"
license=('GPL')
depends=('qt5-base')
makedepends=('git')
source=("git+${url}.git")
sha256sums=('SKIP')

package() {
  mkdir -p ${pkgdir}/usr/share/wallpapers

  msg "Copying wallpapers over to package directory."
  cp -r ${srcdir}/${pkgname}/* ${pkgdir}/usr/share/wallpapers
  
  msg "Cleaning up package directory."
  rm ${pkgdir}/usr/share/wallpapers/{LICENSE,README.md,CREDITS}
}
 
